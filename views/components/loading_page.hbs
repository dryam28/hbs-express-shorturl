<div id="loadframe" class="loadframe">
    <span class="spinner" role="status">
        
    </span>
</div>
<style>
    body{
        overflow-y: hidden;
    }
    .spinner{
        width: 100px;
        height: 100px;
        border-top: 5px solid rgba(0, 0, 0, 0.5);
        border-right: 5px solid rgba(0, 0, 0, 0.5);
        border-left: 5px solid rgba(0, 0, 0, 0.5);
        border-bottom: 5px solid rgb(7, 100, 177);
        border-radius: 100%;
        animation-name: rotate;
        animation-duration: 1s;
        animation-iteration-count: infinite;
        animation-timing-function: ease;
    }
    @keyframes rotate {
        from {
            transform: rotateZ(0);
        }

        to {
            transform: rotateZ(360deg);
        }
    }
    .loadframe{
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgb(255, 255, 255);
        z-index: 100000000; 
        height: 100vh; 
        width: 100vw; 
        position: absolute;
        transition: all .3s;
    }
    .loadframe-fadeOut{
        filter: opacity(0);
    }
</style>
<script>
    function loadingDone(){
        
        document.getElementById('loadframe').className+= ' loadframe-fadeOut'
        setTimeout(function(){
            document.getElementById('loadframe').style=`
             display:none;
        `
        }, 300);
        
        document.querySelector('body').style='overflow-y: scroll;  '
    }
</script>